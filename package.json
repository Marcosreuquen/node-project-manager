{
	"name": "node-project-manager",
	"displayName": "node-project-manager",
	"description": "A command palette extension for managing node projects",
	"version": "1.0.0",
	"publisher": "marcosreuquen",
	"repository": "https://github.com/Marcosreuquen/node-project-manager",
	"icon": "src/images/node-project-manager.png",
	"license": "MIT",
	"keywords": [
		"node",
		"project",
		"dependencies",
		"devDependencies",
		"scripts",
		"command",
		"extension"
	],
	"homepage": "https://github.com/Marcosreuquen/node-project-manager",
	"author": {
		"name": "Marcos Reuquen Diaz",
		"url": "https://marcosdiaz.dev",
		"username": "Marcosreuquen",
		"email": "marcosreuquendiaz@gmail.com"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.nodeProjectManager",
				"title": "Open Node Project Manager",
				"category": "Node Project Manager"
			},
			{
				"command": "extension.useScripts",
				"title": "Use Project Scripts",
				"category": "Node Project Manager"
			},
			{
				"command": "extension.installDependencies",
				"title": "Install Project Dependencies",
				"category": "Node Project Manager"
			},
			{
				"command": "extension.addDependency",
				"title": "Add Dependency",
				"category": "Node Project Manager"
			},
			{
				"command": "extension.removeDependency",
				"title": "Remove Dependency",
				"category": "Node Project Manager"
			},
			{
				"command": "extension.updateDependency",
				"title": "Update Dependency",
				"category": "Node Project Manager"
			},
			{
				"command": "extension.auditDependencies",
				"title": "Audit Dependencies",
				"category": "Node Project Manager"
			},
			{
				"command": "extension.addScript",
				"title": "Add a script to your project",
				"category": "Node Project Manager"
			},
			{
				"command": "extension.addDevDependency",
				"title": "Add a dev dependency to your project",
				"category": "Node Project Manager"
			}
		],
		"configuration": {
			"title": "Node Project Manager",
			"properties": {
				"nodeProjectManager.packageManager": {
					"type": "string",
					"enum": [
						"npm",
						"yarn",
						"pnpm",
						"bun"
					],
					"default": "npm",
					"description": "Choose your preferred package manager"
				},
				"nodeProjectManager.showTerminal": {
					"type": "boolean",
					"default": true,
					"description": "Show terminal when running commands"
				},
				"nodeProjectManager.confirmActions": {
					"type": "boolean",
					"default": true,
					"description": "Ask for confirmation before destructive actions"
				}
			}
		},
		"keybindings": [
			{
				"command": "extension.nodeProjectManager",
				"key": "ctrl+alt+n",
				"mac": "cmd+alt+n",
				"when": "workspaceFolderCount > 0"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "extension.nodeProjectManager",
					"when": "workspaceFolderCount > 0"
				}
			],
			"explorer/context": [
				{
					"command": "extension.nodeProjectManager",
					"when": "resourceFilename == package.json",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"compile:watch": "tsc -watch -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"lint:fix": "eslint \"src/**/*.ts\" --fix",
		"format": "prettier --write \"src/**/*.ts\"",
		"format:check": "prettier --check \"src/**/*.ts\"",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"quality": "run-p lint format:check test",
		"quality:fix": "run-s lint:fix format test",
		"prepackage": "npm run quality",
		"package": "vsce package",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/jest": "^30.0.0",
		"@types/node": "^16.18.34",
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"@vscode/vsce": "^3.6.2",
		"eslint": "^8.26.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"jest": "^30.2.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.6.2",
		"ts-jest": "^29.4.4",
		"tslib": "^2.8.1",
		"typescript": "^5.3.2"
	}
}
